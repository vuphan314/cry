% example
\newcommand{\plaintextex}{4692301804}
\newcommand{\ciphertextex}{1110003333}
\newcommand{\publickeyex}{825}
\newcommand{\privatekeyex}{637}
\newcommand{\getkeysex}
  {\begin{codes}
  \$ cry getkeys --cryptosystem=rsa \\
  The public \& private keys are
  \publickeyex{} \& \privatekeyex{} (took 1 second).
  \end{codes}}
\newcommand{\encryptex}
  {\begin{codes}
  \$ cry encrypt --cryptosystem=rsa \textbackslash \\
  > --public-key=\publickeyex{} \textbackslash \\
  > --plaintext=\plaintextex \\
  The ciphertext is \ciphertextex{} (took 1 second).
  \end{codes}}
\newcommand{\decryptex}
  {\begin{codes}
  \$ cry decrypt --cryptosystem=rsa \textbackslash \\
  > --private-key=\privatekeyex{} \textbackslash \\
  > --ciphertext=\ciphertextex \\
  The plaintext is \plaintextex{} (took 1 second).
  \end{codes}}
\newcommand{\eavesdropex}
  {\begin{codes}
  \$ cry eavesdrop --cryptosystem=rsa \textbackslash \\
  > --public-key=\publickeyex{} \textbackslash \\
  > --ciphertext=\ciphertextex \\
  The plaintext is \plaintextex{} (took 1 century).
  \end{codes}}
